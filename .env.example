# Prometheus Configuration

# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/prometheus.db

# Azure OpenAI - Primary (GPT-OSS-120B with high reasoning)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-oss-120b
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_REASONING_EFFORT=high

# Azure OpenAI - Fallback (GPT-5.1-Codex-Mini for code generation)
AZURE_OPENAI_CODEX_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_CODEX_API_KEY=your_azure_api_key_here
AZURE_OPENAI_CODEX_DEPLOYMENT=gpt-5.1-codex-mini
AZURE_OPENAI_CODEX_API_VERSION=2024-12-01-preview

# LLM Providers (Additional Fallbacks)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=your_org
GITHUB_REPO_NAME=your_repo

# Supabase Integration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# ANOTS Integration
ANOTS_REPO_PATH=../anots
PROMETHEUS_REPO_PATH=./

# Admin Portal
ADMIN_PORTAL_URL=https://admin.anots.com
ADMIN_AUTH_SECRET=your_secret_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
