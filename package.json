{
  "name": "prometheus-meta-agent",
  "version": "0.1.0",
  "description": "Prometheus Meta-Agent System - Self-improving agent for managing and evolving software projects",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:api": "tsx watch src/index.ts",
    "build": "next build && tsc",
    "build:api": "tsc",
    "start": "next start",
    "start:api": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "next lint",
    "lint:api": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "init-db": "tsx src/scripts/init-db.ts",
    "verify-schema": "tsx src/scripts/verify-schema.ts",
    "seed-patterns": "tsx src/scripts/seed-patterns.ts",
    "verify-patterns": "tsx src/scripts/verify-patterns.ts"
  },
  "keywords": [
    "meta-agent",
    "ai",
    "self-improving",
    "code-analysis",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@types/react-grid-layout": "^1.3.6",
    "@types/react-resizable": "^3.0.8",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.17",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "dotenv": "^17.2.4",
    "express": "^4.21.2",
    "lucide-react": "^0.468.0",
    "next": "^15.1.0",
    "postcss": "^8.4.35",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-grid-layout": "^2.2.2",
    "react-markdown": "^10.1.0",
    "react-resizable": "^3.1.3",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "chokidar": "^4.0.3",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fast-check": "^3.22.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
